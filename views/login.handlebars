<div class="login-signup">
  <h2 class="add-comment-title">Login</h2>
  <form class="form" id="login-form">
    <div class="form-group">
      <label for="username-login">Username</label><br>
      <input class="form-input" type="text" id="username-login" name="username" required>
    </div>
    <div class="form-group">
      <label for="password-login">Password (8+ characters)</label><br>
      <input class="form-input" type="password" id="password-login" name="password" minlength="8" required>
    </div>
    <div class="form-group">
      <button class="btn-submit" type="submit">Login</button>
    </div>
  </form>
  <a href="/signup">New user? Click here to sign up!</a>
</div>