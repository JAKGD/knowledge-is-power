<div class="quiz-container">
  <h2>{{question.question_text}}</h2>
  <form method="POST" id="quiz-form">
    <input type="hidden" name="question_id" value="{{question.id}}">
    {{#each question.answers}}
      <div class="answer-choice">
        <input type="radio" name="answer" id="{{this.id}}" value="{{this.answer_choice}}" required>
        <label for="{{this.id}}">{{this.answer_choice}}</label>
      </div>
    {{/each}}
    <button class="button is-primary" type="submit">Submit Answer</button>
  </form>
  {{#if score}}
    <p>Score: {{score}}</p>
  {{/if}}
  <button class="button is-primary next-question-btn" style="display:none;">Next Question</button>
</div>
